{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "lib/*": ["src/lib/*"],
      "@/lib/*": ["src/lib/*"],
      "@/components/*": ["src/components/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules/@types/node"]
  },
  "include": [
    "sanity.config.ts",
    "src",
    "netlify/functions",
    "netlify/lib",
    "types",
    "schemaTypes",
    "desk",
    "components",
    "plugins",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "schemaTypes/objects/buildQuote.ts"
  ]
}
