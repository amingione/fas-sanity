---
interface Props {
  title?: string
}

const {title = 'FAS Motorsports'} = Astro.props as Props
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="FAS Motorsports" />
    <style>
      :root {
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: #111;
        background-color: #f5f5f5;
      }

      body {
        margin: 0;
        min-height: 100vh;
        background-color: #f5f5f5;
      }

      a {
        color: inherit;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
